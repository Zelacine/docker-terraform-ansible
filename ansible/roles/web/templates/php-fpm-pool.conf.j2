[www]
user = {{ web_container_user }}
group = {{ web_container_user }}
listen = 0.0.0.0:9000
pm = {{ web_php_pm }}
pm.max_children = {{ web_php_pm_max_children }}
pm.max_requests = {{ web_php_pm_max_requests }}
{% if web_php_pm == 'dynamic' %}
pm.start_servers = {{ web_php_pm_start_servers }}
pm.min_spare_servers = {{ web_php_pm_min_spare_servers }}
pm.max_spare_servers = {{ web_php_pm_max_spare_servers }}
pm.process_idle_timeout = {{ web_php_pm_process_idle_timeout }}
{% endif %}
env[APP_ENV] = {{ web_app_env }}
php_admin_value[error_log] = /proc/self/fd/2
php_admin_flag[log_errors] = on
{% if web_php_pm_status_path is defined %}
pm.status_path = {{ web_php_pm_status_path }}
{% endif %}

